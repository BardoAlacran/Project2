<div class="container m-auto">
  <header class="flex items-center w-full mt-2 mb-3">
    <div class="flex-grow">
      <h1 class="text-3xl font-bold">
        {{user.email}}
      </h1>
    </div>
    <a class="border border-gray-400 rounded-full p-2 border-solid" href="/game/add">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z"
          clip-rule="evenodd" />
      </svg>
    </a>
  </header>
  <section class="mb-5">
    <input class="w-full mb-3" type="text" placeholder="Search game" />
  </section>
  <main class="flex flex-col gap-y-4">
    {{#each games}}
    {{> card this}}
    {{/each}}
    <div class="h-28"></div>
  </main>
  <nav
    class="fixed bottom-0 left-0 w-full flex justify-evenly border border-solid border-gray-400 rounded-t-2xl bg-white p-4 h-24 text-gray-300">
    <div class="flex flex-col items-center gap-y-2 navbar-item-active">
      <a href="/">
        <svg width="24" height="24" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M3 12v3c0 1.657 3.134 3 7 3s7-1.343 7-3v-3c0 1.657-3.134 3-7 3s-7-1.343-7-3z M3 7v3c0 1.657 3.134 3 7 3s7-1.343 7-3V7c0 1.657-3.134 3-7 3S3 8.657 3 7z M17 5c0 1.657-3.134 3-7 3S3 6.657 3 5s3.134-3 7-3 7 1.343 7 3z"
            fill="currentColor"></path>
        </svg>
        <br>
        <p>Games</p>
      </a>
    </div>
    <div class="navbar-item">
      <a href="/profile">
        <svg width="24" height="24" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M18.0044 14.2209C16.4247 13.4095 17.0334 14.0302 15.0941 13.2001C13.155 12.3713 12.6956 12.1003 12.6956 12.1003L12.6784 10.1991C12.6784 10.1991 13.4047 9.62995 13.6312 7.83198C14.0847 7.96748 14.2381 7.2832 14.2628 6.84604C14.2897 6.42373 14.5309 5.10743 13.9762 5.22487C14.0897 4.34604 14.1787 3.55143 14.1387 3.13073C14 1.65441 13.0112 0.112595 10.5153 0C8.39344 0.112595 7.01594 1.65537 6.87687 3.13169C6.83687 3.55239 6.91844 4.34637 7.03187 5.2268C6.4775 5.10776 6.71625 6.42664 6.74062 6.84863C6.7675 7.28578 6.9175 7.972 7.37187 7.83649C7.5975 9.63479 8.32375 10.2081 8.32375 10.2081L8.30562 12.1196C8.30562 12.1196 7.84625 12.409 5.90719 13.2378C3.96812 14.0683 4.57625 13.4098 2.99656 14.2209C0.5 15.5033 0.5 19.0299 0.5 19.0299C0.5 19.5667 0.919687 20 1.4375 20H19.5625C20.0803 20 20.5 19.5667 20.5 19.0321C20.5003 19.0299 20.5003 15.5026 18.0044 14.2209Z"
